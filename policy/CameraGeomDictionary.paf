#<?cfg paf dictionary ?>
#
target: CameraGeomPolicy

definitions: {
    Raft: {
        type: Policy
        dictionary: {
            target: "Raft"
            definitions: {
                serial: {
                    type: int
                    description: "Raft's serial number"
                    minOccurs: 0
                    maxOccurs: 1
                    default: -1
                }
                name: {
                    type: string
                    minOccurs: 0
                    maxOccurs: 1
                    default: " "
                }
                nCol: {
                    type: int
                    description: "Number of columns of CCDs"
                    minOccurs: 1
                    maxOccurs: 1
                }
                nRow: {
                    type: int
                    description: "Number of rows of CCDs"
                    minOccurs: 1
                    maxOccurs: 1
                }
                Ccd: {
                    type: Policy
                    dictionary: {
                        target: "Ccd"
                        definitions: {
                            serial: {
                                type: int
                                description: "CCD's serial number"
                                minOccurs: 0
                                maxOccurs: 1
                                default: -1
                            }
                            name: {
                                type: string
                                minOccurs: 0
                                maxOccurs: 1
                                default: " "
                            }
                            nCol: {
                                type: int
                                description: "Number of columns of amps; 2 == Left and Right"
                                minOccurs: 1
                                maxOccurs: 1
                            }
                            nRow: {
                                type: int
                                description: "Number of rows of amps"
                                minOccurs: 1
                                maxOccurs: 1
                            }
                            #
                            # Now define an Amp within a Ccd
                            #
                            Amp: {
                                type: policy
                                dictionary: {
                                    target: Amp
                                    definitions: {
                                        id: {
                                            type: string
                                            description: "ID for this Amp"
                                        }
                                        iCol: {
                                            type: int
                                            description: "X-location of Amp in CCD in range(nCol)"
                                            minOccurs: 1
                                            maxOccurs: 1
                                        }
                                        iRow: {
                                            type: int
                                            description: "Y-location of Amp in CCD in range(nRow)"
                                            minOccurs: 1
                                            maxOccurs: 1
                                        }
                                        height: {
                                            type: int
                                            description: "Number of rows in physical device"
                                            minOccurs: 1
                                            maxOccurs: 1
                                        }
                                        width: {
                                            type: int
                                            description: "Number of columns in physical device"
                                            minOccurs: 1
                                            maxOccurs: 1
                                        }
                                        readoutCorner: {
                                            description: "location of first pixel read"
                                            allowed: {
                                                value: "LLC"
                                                description: "Lower left corner"
                                            }
                                            allowed: {
                                                value: "ULC"
                                                description: "Upper left corner"
                                            }
                                            allowed: {
                                                value: "URC"
                                                description: "Upper right corner"
                                            }
                                            allowed: {
                                                value: "LRC"
                                                description: "Lower right corner"
                                            }
                                            minOccurs: 0
                                            maxOccurs: 1
                                        }
                                        extended: {
                                            type: int
                                            description: "length of extended register"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: 0
                                        }
                                        preRows: {
                                            type: int
                                            description: "extra rows before first real serial transfer"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: 0
                                        }
                                        overclockH: {
                                            type: int
                                            description: "number of serial overclock pixels"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: 0
                                        }
                                        overclockV: {
                                            type: int
                                            description: number of parallel overclock pixels
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: 0
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
