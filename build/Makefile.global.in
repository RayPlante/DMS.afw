# @configure_input@
CC = @CC@
CXX = @CXX@
LD = @LD@
CFLAGS = @CFLAGS@
CXXFLAGS = @CXXFLAGS@
SO = @SO@
SO_LDFLAGS = @SO_LDFLAGS@
DYLIB = @DYLIB@
DYLIB_LDFLAGS = @DYLIB_LDFLAGS@

RANLIB = @RANLIB@
SWIG = @SWIG@

#-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-

include makedefs
include installdefs

% : %.c
	$(CC) $(CFLAGS) $(SUPPORT_CFLAGS) -o $@ $< $(SUPPORT_LIBS)

%.o : %.c
	$(CC) -c $(CFLAGS) $(SUPPORT_CFLAGS) -o $@ $<

%.o : %.cc
	$(CXX) -c $(CXXFLAGS) $(SUPPORT_CFLAGS) -o $@ $<

%.o : %.cpp
	$(CXX) -c $(CXXFLAGS) $(SUPPORT_CFLAGS) -o $@ $<

%.o : %.C
	$(CXX) -c $(CXXFLAGS) $(SUPPORT_CFLAGS) -o $@ $<

%_wrap.c : %.i
	$(SWIG) $<

%/__init__.py : 
	touch $@


SUPPORT_LIBS = $(PYTHON_LIBS)
SUPPORT_LIBS += $(EXTRA_LIBS)

SUPPORT_CFLAGS = $(PYTHON_CFLAGS)

.PHONY : install all clean distclean

.PHONY : first
first : all
	@true
